{
  "name": "pdfcrowd-mcp-pdf-export",
  "version": "1.0.1",
  "description": "PDF Export for AI agents - export any content to PDF with AI-powered formatting. Works with Claude Code, Codex CLI, and other MCP clients.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pdfcrowd-mcp-pdf-export": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "version": "bash scripts/finalize-changelog.sh",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "archiver": "^7.0.1",
    "axios": "^1.7.9",
    "form-data": "^4.0.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
