{
  "name": "pdfcrowd-pdf-export-mcp",
  "version": "1.0.0",
  "description": "MCP server for PDFCrowd API - convert HTML and URLs to PDF",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pdfcrowd-pdf-export-mcp": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.7.9",
