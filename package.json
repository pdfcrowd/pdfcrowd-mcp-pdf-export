    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "mcp",
    "pdfcrowd",
    "pdf",
    "html-to-pdf",
    "url-to-pdf"
  ],
  "license": "MIT"
}
