    "type": "git",
    "url": "git+https://github.com/pdfcrowd/pdfcrowd-mcp-pdf-export.git"
  },
  "bugs": {
    "url": "https://github.com/pdfcrowd/pdfcrowd-mcp-pdf-export/issues"
