      "glob": "^13.0.0"
    }
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pdf",
    "pdf-export",
    "pdfcrowd",
    "claude",
    "claude-code",
